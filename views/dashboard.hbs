<script type="html/template" id="template-app-layout">
  <div id="gtt-menu"></div>
  <div id="gtt-container"></div>
</script>
<script type="html/template" id="template-menu">
  <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">
          <i class="fa fa-code-fork"></i>
          gtt projects
        </a>
      </div>
      <ul class="nav navbar-nav">
        <% _.each(projects(), function(project) { %>
          <li><a href="/projects/<%= project %>"><%= project %></a></li>
        <% }); %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/logout">logout</a></li>
      </ul>
    </div>
  </nav>
</script>
<script type="html/template" id="template-project-form">
  <h1>Project</h1>
  <form>
    <input type="text" name="name" placeholder="name" />
    <input type="text" name="name" placeholder="currency [usd]" />
    <input type="text" name="name" placeholder="rate [0]" />
    <button type="submit">Save</button>
  </form>
</script>
<script type="html/template" id="template-project">
  <strong>name:</strong> <%= name %>
  <strong>rate:</strong> <%= currency %> <%= rate %>
  <table class="table">
    <thead>
      <tr>
        <th>Day</th>
        <th>Start</th>
        <th>End</th>
        <th>Duration</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</script>
<script type="html/template" id="template-day">
  <td><%= day(start) %></td>
  <td><%= time(start) %></td>
  <td><%= time(end) %></td>
  <td><%= duration %></td>
</script>
<script>
  window.GTT = {
    projects: {{{projects}}}
  };
</script>
<script src="build.js">
</script>
