<!DOCTYPE HTML>
<html>
  <head>
    <title>gtt- Git Time Tracker</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="//yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css">
    <link rel="stylesheet" href="build.css">
  </head>
  <body>
    <script type="html/template" id="template-app-layout">
      <div id="gtt-menu"></div>
      <div id="gtt-container"></div>
    </script>
    <script type="html/template" id="template-menu">
      <nav class="pure-menu pure-menu-open pure-menu-horizontal">
        <a href="/" class="pure-menu-heading">
          <i class="fa fa-code-fork"></i>
          gtt projects
        </a>
        <ul>
          <% _.each({{{projects}}}, function(project) { %>
            <li><a href="/projects/<%= project.name %>"><%= project.name %></a></li>
          <% }); %>
        </ul>
      </nav>
    </script>
    <script src="build.js"></script>
  </body>
</html>
